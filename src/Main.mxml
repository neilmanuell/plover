<?xml version="1.0"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
                       xmlns:rl2="http://ns.robotlegs.org/flex/rl2" xmlns:bundles="bundles.*" xmlns:config="config.*"
                       xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:components="plover.view.components.*"
                       frameRate="60">
    <fx:Declarations>
        <rl2:ContextBuilder>
            <bundles:SimpleViewBundle/>
            <bundles:EventFlowBundle/>
            <bundles:ToolsBundle/>
            <config:ModelConfig/>
            <config:ViewConfig/>
            <config:ServiceConfig/>
            <config:MouseDragConfig/>
            <config:StateMachineConfig/>
        </rl2:ContextBuilder>
        <fx:XML format="e4x" id="myMenuData">
            <root>
                <menuitem label="File">
                    <menuitem id="importImages"  label="open"/>
                    <menuitem id="closeBook" label="close"/>
                    <menuitem id="saveBook"  label="save"/>
                    <menuitem id="exitApp" label="quit"/>

                </menuitem>
                <menuitem label="Settings">
                    <menuitem id="editSettings" label="bitmap memory"/>
                    <menuitem type="separator"/>
                    <menuitem id="relativeDrag" label="relative drag" type="check" toggled="true"/>
                    <menuitem id="delayedDrag" label="delayed drag" type="check" toggled="false"/>
                    <menuitem id="absoluteDrag" label="absolute drag" type="check" toggled="false"/>
                </menuitem>
            </root>
        </fx:XML>
    </fx:Declarations>

    <s:menu>
        <mx:FlexNativeMenu id= "menu"
                           dataProvider="{myMenuData}"
                           labelField="@label"
                           showRoot="false"/>
    </s:menu>




    <s:HGroup width="100%">

        <components:DragControlCombo selectedIndex="0"/>
        <mx:ProgressBar mode="manual" label="" labelPlacement="center" width="100%" height="22"/>

    </s:HGroup>
    <s:TabBar id="tabBar" width="100%"/>
    <mx:ViewStack id="viewStack" width="100%"  height="100%"/>
    <s:layout>
        <s:VerticalLayout/>
    </s:layout>
</s:WindowedApplication>