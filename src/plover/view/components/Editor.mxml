<components:EditorBase xmlns:fx="http://ns.adobe.com/mxml/2009"
                       xmlns:components="plover.view.components.*"
                       xmlns:s="library://ns.adobe.com/flex/spark"
                       width="100%" height="100%">


    <s:List id="list"
            dataProvider="{dataProvider}"
            width="100%" height="100%"
            itemRenderer="plover.view.components.ThumbItemRenderer"
            dragEnabled="true"
            dropEnabled="true"
            dragMoveEnabled="true"
            allowMultipleSelection="true"
           >
        <s:layout>
            <s:TileLayout requestedColumnCount="-1"
                          requestedRowCount="-1"
                          horizontalGap="0"
                          verticalGap="0"
                    columnAlign="justifyUsingWidth"/>
        </s:layout>
    </s:List>
</components:EditorBase>
