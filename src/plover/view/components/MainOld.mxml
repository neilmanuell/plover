<?xml version="1.0"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
                       xmlns:rl2="http://ns.robotlegs.org/flex/rl2" xmlns:bundles="bundles.*" xmlns:config="config.*"
                       xmlns:components="plover.view.components.*" xmlns:mx="library://ns.adobe.com/flex/mx"
                       frameRate="60">
    <fx:Declarations>
        <rl2:ContextBuilder>
            <bundles:SimpleViewBundle/>
            <bundles:EventFlowBundle/>
            <bundles:ToolsBundle/>
            <config:ModelConfig/>
            <config:ViewConfig/>
            <config:ServiceConfig/>
            <config:KeyboardRouterConfig/>
            <config:MouseDragConfig/>
            <config:ControllerConfig/>
            <config:StateMachineConfig/>
            <config:StartUpConfig/>
        </rl2:ContextBuilder>
    </fx:Declarations>
    <s:HGroup width="100%">
        <s:Button id="importImages" label="import"/>
        <components:DragControlCombo selectedIndex="0"/>
        <mx:ProgressBar mode="manual" label="" labelPlacement="center" width="100%" height="22"/>
        <s:Button id="exitApp" label="exit"/>
    </s:HGroup>

    <components:Slide id="slide" topAlpha="{slide.data.remainder}" selectedIndex="{slide.data.selectedIndex}" width="100%" height="100%"/>

    <s:HSlider mouseChildren="false" mouseEnabled="false" width="100%" value="{slide.data.selectedIndex}" maximum="{slide.data.numberOfChildren-1}"/>
    <s:layout>
        <s:VerticalLayout/>
    </s:layout>
</s:WindowedApplication>